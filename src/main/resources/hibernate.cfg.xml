<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name = "connection.driver_class">org.postgresql.Driver</property>
        <property name = "connection.url">jdbc:postgresql://localhost:5432/postgres</property>
        <property name = "connection.username">market</property>
        <property name = "connection.password">market</property>
        <property name = "connection.pool_size">1</property>
        <property name = "dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>
        <property name = "show_sql">true</property>
        <property name = "hbm2ddl.auto">update</property>
        <property name = "current_session_context_path">thread</property>
        <mapping class="com.github.spacenail.market.Model.Product"/>
    </session-factory>
</hibernate-configuration>